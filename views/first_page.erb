<html>
	<body onload="currentSlide(1)">
		<div class="pizza_heading">
    		<h1>Welcome to Varney's Pizza Place</h1>
   			<p>Create Your Pizza Below</p>
    	</div>
    	<div class="slideshow-container">
			<div id="pizza_form">
				<form method="post" action="first_page">
					<div class="mySlides fade">
    					<div id="pizza_sizes">	
    						<div class="numbertext">MADE</div>
    						<img src="/images/stuff1.jpeg" style="width:100%">
    						<div class="text">
								<h2>Choose a size:</h2>
								<input type="radio" name="size" value="small"> Small $8.00<br>
								<input type="radio" name="size" value="medium"> Medium $10.00<br>
								<input type="radio" name="size" value="large" checked> Large $12.00<br>
								<br>
							</div>	
						</div>
					</div>
					<div class="mySlides fade">	
						<div id="toppings_vegetables">
							<div class="numbertext">BY</div>
    						<img src="/images/stuff1.jpeg" style="width:100%">
    						<div class="text">
								<h2>Vegetables 50¢ each</h2>
								<input type="checkbox" name="veg1" value="mushrooms,"> Mushrooms<br>
								<input type="checkbox" name="veg2" value="banana_peppers,"> Banana Peppers<br>
								<input type="checkbox" name="veg3" value="onions,"> Onions<br>
								<input type="checkbox" name="veg4" value="tomatoes,"> Tomatoes<br>
								<br>
							</div>	
						</div>
					</div>
					<div class="mySlides fade">	
						<div id="toppings_meats">
							<div class="numbertext">JOSH</div>
    						<img src="/images/stuff1.jpeg" style="width:100%">
    						<div class="text">
								<h2>Extra Meats 75¢ each</h2>
								<input type="checkbox" name="meat1" value="pepperoni,"> Pepperoni<br>
								<input type="checkbox" name="meat2" value="sausage,"> Sausage<br>
								<input type="checkbox" name="meat3" value="ham,"> Ham<br>
								<input type="checkbox" name="meat4" value="bacon,"> Bacon<br>
							</div>
						</div>
					</div>
					<div class="mySlides fade">
						<div id="cheese_submit">
							<div class="numbertext">VARNEY</div>
    						<img src="/images/stuff1.jpeg" style="width:100%">
    						<div class="text">
								<h2>Extra Cheese $1.00</h2>
								<input type="checkbox" name="cheese" value=1> Add<br>
								<h2>Finalize Order</h2>
								<br>
								<input type="submit" value="Submit Order">
							</div>
						</div>
					</div>		   
				</form>
				<a class="prev" onclick="plusSlides(-1)">&#10094;</a>
  				<a class="next" onclick="plusSlides(1)">&#10095;</a>
			</div>
			<br>
		</div>
		<div style="text-align:center">
  			<span id="dot1" class="dot" onclick="currentSlide(1)"></span> 
  			<span id="dot2" class="dot" onclick="currentSlide(2)"></span> 
  			<span id="dot3" class="dot" onclick="currentSlide(3)"></span>
  			<span id="dot4" class="dot" onclick="currentSlide(4)"></span> 
		</div>
		<div id="pizza_order">
			<h3><%=pizza_cost%></h3>
		</div>		
	</body>
</html>