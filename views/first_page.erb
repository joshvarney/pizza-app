<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=.5">
	</head>
	<body onload="currentSlide(1)">
		<header class="pizza_heading">
    		<h1>Welcome to Varney's Pizza Place</h1>
   			<p>Create Your Pizza Below</p>
    	</header>
    	<div class="slideshow-container">
			<div id="pizza_form">
				<form method="post" action="first_page">
					<div class="mySlides fade">
    					<div id="delivery_select">	
    						<div class="numbertext">1 / 7</div>
    						<img src="/images/stuff1.jpeg" style="width:100%">
    						<div class="text">
    							<h2>Name for Order</h2>
    							* <input type="text" name="name" placeholder="Name" required autofocus><br><br>
    							<input type="hidden" name="total_cost" value=0>
								<input type="hidden" name="more_pizza" value=0>
								<h2>Delivery or Pickup?</h2>
								<div id="selection_box">									
									<input id="no_delivery" type="radio" name="delivery" value="0" checked> Pickup in store<br>
									<input id="want_delivery" type="radio" name="delivery" value="2"> Delivery $2.00<br><br>
									<div class="reveal-if-active">
										* <input class="require_if_active" type="text" name="address" placeholder="Street Address" disabled><br><br>
										* <input class="require_if_active" type="number" name="zip" placeholder="Zip-Code" disabled><br><br>
										* <input class="require_if_active" type="tel" name="phone" placeholder="Phone (___) ___-____" disabled><br><br>
										* <input class="require_if_active" type="email" name="email" placeholder="example@email.com" disabled>
									</div>									
								</div>
								<br><br><i style="color:red">(* indicates required field)</i>
							</div>	
						</div>
					</div>
					<div class="mySlides fade">
    					<div id="pizza_sizes" onload="showPrevButton()">	
    						<div class="numbertext">2 / 7</div>
    						<img src="/images/stuff1.jpeg" style="width:100%">
    						<div class="text">
								<h2>Choose a size:</h2><br>
								<div id="selection_box2">
									<input type="radio" name="size" value="small"> Small $8.00<br><br>
									<input type="radio" name="size" value="medium"> Medium $10.00<br><br>
									<input type="radio" name="size" value="large" checked> Large $12.00<br><br>
								</div>	
							</div>	
						</div>
					</div>
					<div class="mySlides fade">	
						<div id="crust_types">
							<div class="numbertext">3 / 7</div>
    						<img src="/images/stuff1.jpeg" style="width:100%">
    						<div class="text">
								<h2>Choose Crust Type:</h2><br>
								<div id="selection_box">
									<div class="float_left">
										<input type="radio" name="crust" value="hand_tossed" checked> Hand Tossed<br><br>
										<img src="/images/hand_tossed.png"><br><br>
										<input type="radio" name="crust" value="thin_and_crispy"> Thin and Crispy<br><br>
										<img src="/images/thin_crispy.png">
									</div>
									<div class="float_right">
										<input type="radio" name="crust" value="pan"> Pan crust $1<br><br>
										<img src="/images/pan_crust.png"><br><br>
										<input type="radio" name="crust" value="stuffed_crust"> Stuffed crust $2<br><br>
										<img src="/images/stuffed_crust.png">
									</div>	
								</div>	
							</div>	
						</div>
					</div>
					<div class="mySlides fade">	
						<div id="sauce_types">
							<div class="numbertext">4 / 7</div>
    						<img src="/images/stuff1.jpeg" style="width:100%">
    						<div class="text">
								<h2>Choose a Sauce Type:</h2><br>
								<div id="selection_box">
									<div class="float_left">
										<input type="radio" name="sauce" value="classic" checked> Our Classic Sauce<br><br>
										<img src="/images/classic_sauce.png"><br><br>
										<input type="radio" name="sauce" value="garlic_parmesan"> Garlic Parmesan $1<br><br>
										<img src="/images/garlic_parmesan.png">
									</div>
									<div class="float_right">
										<input type="radio" name="sauce" value="barbecue"> Barbecue Sauce $1<br><br>
										<img src="/images/barbeque.png"><br><br>
										<input type="radio" name="sauce" value="buffalo"> Buffalo Sauce $1<br><br>
										<img src="/images/buffalo.png">
									</div>	
								</div>	
							</div>	
						</div>
					</div>
					<div class="mySlides fade">	
						<div id="toppings_vegetables">
							<div class="numbertext">5 / 7</div>
    						<img src="/images/stuff1.jpeg" style="width:100%">
    						<div class="text">
								<h2>Veggies 50¢ each</h2><br>
								<div id="selection_box">
									<div class="float_left">
										<input type="checkbox" name="veg1" value="mushrooms,"> Mushrooms<br><br>
										<img src="/images/mushrooms.png"><br><br>
										<input type="checkbox" name="veg2" value="banana_peppers,"> Banana Peppers<br><br>
										<img src="/images/banana_peppers.png">
									</div>
									<div class="float_right">
										<input type="checkbox" name="veg3" value="onions,"> Onions<br><br>
										<img src="/images/onions.png"><br><br>
										<input type="checkbox" name="veg4" value="tomatoes,"> Tomatoes<br><br>
										<img src="/images/tomatoes.png">
									</div>	
								</div>	
							</div>	
						</div>
					</div>
					<div class="mySlides fade">	
						<div id="toppings_meats">
							<div class="numbertext">6 / 7</div>
    						<img src="/images/stuff1.jpeg" style="width:100%">
    						<div class="text">
								<h2>Meats 75¢ each</h2><br>
								<div id="selection_box">	
									<div class="float_left">
										<input type="checkbox" name="meat1" value="pepperoni,"> Pepperoni<br><br>
										<img src="/images/pepperoni.png"><br><br>
										<input type="checkbox" name="meat2" value="sausage,"> Sausage<br><br>
										<img src="/images/sausage.png">
									</div>
									<div class="float_right">
										<input type="checkbox" name="meat3" value="ham,"> Ham<br><br>
										<img src="/images/ham.png"><br><br>
										<input type="checkbox" name="meat4" value="bacon,"> Bacon<br><br>
										<img src="/images/bacon.png">
									</div>	
								</div>	
							</div>
						</div>
					</div>
					<div class="mySlides fade" id="last_slide">
						<div id="cheese_submit">
							<div class="numbertext">7 / 7</div>
    						<img src="/images/stuff1.jpeg" style="width:100%">
    						<div class="text">
								<h2>Extra Cheese $1.00</h2><br>
								<div id="selection_box">
									<input type="checkbox" name="cheese" value=1> Add<br><br>
									<img src="/images/extra_cheese.png"><br>
								</div>	
								<h2>Finished Adding Toppings?</h2><br>									
								<input class="submit_button" type="submit" value="Make Pizza" onclick="requiredFieldsError(), currentSlide(1)"><br><br>
								<i id="required_fields" style="display:none">(Required fields must be filled out)</i>
							</div>
						</div>
					</div>		   
				</form>
				<a class="prev" id="previous" style="display:none" onclick="plusSlides(-1)">&#10094; Back</a>
  				<a class="next" id="next_button" onclick="plusSlides(1), showPrevButton()">Next &#10095;</a>
			</div>
		</div>
		<div style="text-align:center">
  			<span id="dot1" class="dot" onclick="currentSlide(1)"></span> 
  			<span id="dot2" class="dot" onclick="currentSlide(2)"></span> 
  			<span id="dot3" class="dot" onclick="currentSlide(3)"></span>
  			<span id="dot4" class="dot" onclick="currentSlide(4)"></span>
  			<span id="dot5" class="dot" onclick="currentSlide(5)"></span>
  			<span id="dot6" class="dot" onclick="currentSlide(6)"></span>
  			<span id="dot7" class="dot" onclick="currentSlide(7)"></span>
		</div>
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
		<script>
	        $("#want_delivery").click(function() {
	            $(".require_if_active").prop("required", true);
	            $(".require_if_active").prop("disabled", false);  
	        });
	        $("#no_delivery").click(function() {
	            $(".require_if_active").prop("required", false);
	            $(".require_if_active").prop("disabled", true);  
	        });


			function requiredFieldsError() {
          		var x = document.getElementById("required_fields");
          		if (x.style.display === "none") {
              		x.style.display = "block";
          		}
      		}
      		
      		function showPrevButton() {
          		var x = document.getElementById("previous");
          		if (x.style.display === "none") {
              		x.style.display = "block";
          		}
      		}
		</script>
	</body>
</html>